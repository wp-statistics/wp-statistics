{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/wp-admin/network/admin.php?page=wps_overview_page",
  "preferredVersions": {
    "php": "8.2",
    "wp": "latest"
  },
  "features": {
    "networking": true
  },
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_DEBUG": true,
        "WP_DEBUG_LOG": true,
        "WP_DEBUG_DISPLAY": false,
        "SCRIPT_DEBUG": true,
        "WP_ALLOW_MULTISITE": true,
        "MULTISITE": true,
        "SUBDOMAIN_INSTALL": false,
        "DOMAIN_CURRENT_SITE": "playground.wordpress.net",
        "PATH_CURRENT_SITE": "/",
        "SITE_ID_CURRENT_SITE": 1,
        "BLOG_ID_CURRENT_SITE": 1
      }
    },
    {
      "step": "enableMultisite"
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "url",
        "url": "https://github.com/wp-statistics/wp-statistics/releases/latest/download/wp-statistics.zip"
      },
      "options": {
        "activate": true,
        "targetPath": "/wordpress/wp-content/plugins/wp-statistics"
      }
    },
    {
      "step": "login",
      "username": "admin",
      "password": "password"
    },
    {
      "step": "runPHP",
      "code": "<?php require_once 'wp-load.php'; require_once ABSPATH . 'wp-admin/includes/plugin.php'; activate_plugin('wp-statistics/wp-statistics.php', '', true); ?>"
    },
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "WP Statistics Multisite",
        "blogdescription": "Multisite Testing Environment"
      }
    }
  ]
}
